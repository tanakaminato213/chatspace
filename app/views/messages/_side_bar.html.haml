.chat-side
  .side-header
    .box
      %p.box__user-name
      = current_user.name
      %ul.box__menu
        %li.box__menu__new-group
        = link_to new_group_path do
          =fa_icon 'pencil-square-o', class: 'icon'
        %li.box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group),class:"link_group" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
            .group
